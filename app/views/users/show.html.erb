<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<table>
    <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
  <% @user.microposts.each do |mpost| %>
    <tr>
      <td><%= mpost.content %></td>
      <td><%= link_to 'Show', mpost %></td>
      <td><%= link_to 'Edit', edit_micropost_path(mpost) %></td>
      <td><%= link_to 'Destroy', mpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</tbody>
</table>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
